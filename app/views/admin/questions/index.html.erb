<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box grey-cascade">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-globe"></i>试题管理
        </div>
        <div class="tools">
          <a class="collapse" href="javascript:;">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <div class="dataTables_wrapper">
          <div class="btn-group">
            <a href="<%= new_admin_question_path %>" class="btn green">
            添加试题 <i class="fa fa-plus"></i>
            </a>
          </div>
        </div>
        <table class="table table-striped table-bordered table-hover dataTable">
          <thead>
            <tr>
            	<th>分类</th>
              <th>题目</th>
              <th>A</th>
              <th>B</th>
              <th>C</th>
              <th>D</th>
              <th>答案</th>
              <th>操作</th>
            </tr>
          </thead>
          <% @questions.each do |r|%>
            <tbody>
              <tr class="odd gradeX">
              	<td class="ng-binding"><%= r.classify %></td>
                <td class="ng-binding"><%= r.title %></td>
                <td class="ng-binding"><%= r.a %></td>
                <td class="ng-binding"><%= r.b %></td>
                <td class="ng-binding"><%= r.c %></td>
                <td class="ng-binding"><%= r.d %></td>
                <td class="ng-binding"><%= r.answer %></td>
                <td>
                  <%= link_to '编辑', edit_admin_question_path(r) %>
                  <%= link_to '删除', admin_question_path(r), method: :delete, confirm: '确认要删除吗？' %>
                </td>
              </tr>
            </tbody>
          <% end -%>
        </table>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>