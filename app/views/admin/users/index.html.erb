<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box grey-cascade">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-globe"></i>用户管理
        </div>
        <div class="tools">
          <a class="collapse" href="javascript:;">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <div class="dataTables_wrapper">
          <div class="btn-group">
            <a href="<%= new_admin_user_path %>" class="btn green">
            添加新用户 <i class="fa fa-plus"></i>
            </a>
          </div>
        </div>
        <table class="table table-striped table-bordered table-hover dataTable">
          <thead>
            <tr>
              <th>用户名</th>
              <th>性别</th>
              <th>年龄</th>
              <th>邮箱</th>
              <th>电话</th>
              <th>职位</th>
              <th>qq</th>
              <th>创建时间</th>
              <th>操作</th>
            </tr>
          </thead>
          <% @users.each do |user|%>
            <tbody>
              <tr class="odd gradeX">
                <td class="ng-binding"><%= user.name %></td>
                <td class="ng-binding"><%= user.sex %></td>
                <td class="ng-binding"><%= user.age %></td>
                <td class="ng-binding"><%= user.email %></td>
                <td class="ng-binding"><%= user.mobile %></td>
                <td class="ng-binding"><%= user.position %></td>
                <td class="ng-binding"><%= user.qq %></td>
                <td class="ng-binding"><%= user.created_at.strftime('%F %T') %></td>
                <td>
                  <%= link_to '编辑', edit_admin_user_path(user) %>
                  <%= link_to '删除', admin_user_path(user), method: :delete, confirm: '确认要删除吗？' %>
                </td>
              </tr>
            </tbody>
          <% end -%>
        </table>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>