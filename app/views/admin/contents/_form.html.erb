<link href="https://cdn.bootcss.com/froala-editor/2.6.2/css/froala_editor.min.css" rel="stylesheet">
<link href="https://cdn.bootcss.com/froala-editor/2.6.2/css/froala_style.min.css" rel="stylesheet">
<link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<script src="https://cdn.bootcss.com/froala-editor/2.6.2/js/froala_editor.min.js"></script>
<div class="row">
  <div class="col-md-12">
  <br/>
  <br/>
  <%= form_for [:admin, @content] do |f| %>
	  <%= f.select :ctype, [["活动规则", 1], ["线上学习", 2], ["线下学习", 3]] %>
	  <br/>
	  <br/>
	  <%= f.text_area :content, id:"myEditor" %>
	  <br/>
	  <br/>
	  <%= f.submit "提交", class: "btn info"%>
  <% end %>
   
  <script>
	$(document).ready(function(){
	      $('#myEditor').froalaEditor({toolbarInline: false})
	});
  </script>
  </div>
</div>
