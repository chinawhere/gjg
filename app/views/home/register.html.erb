<style type="text/css">
  .sign-up-form{
    border-right: 1px solid #e7e7e7;
    float: left;
    padding-bottom: 110px;
    padding-right: 20px;
  }
  .green{
    color: #6a9700;
  }
</style>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-6 sign-up-form">
    <div class="content" style="width:300px">
    <!-- BEGIN LOGIN FORM -->
      <%= form_tag sign_up_path, :class => 'login-form' do %>
        <h3 class="form-title">ChinaWhere</h3>
        <% if flash[:notice] %>
          <div class="alert alert-danger">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">用户名</label>
          <div class="input-icon" >
            <i class="fa fa-user"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="用户名" name="user[name]", value="<%= @user.try(:name)%>" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">邮箱</label>
          <div class="input-icon" >
            <i class="fa fa-envelope-o"></i>
            <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="邮箱" name="user[email]" value="<%= @user.try(:email)%>" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">密码</label>
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="密码" name="user[password]" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">确认密码</label>
          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="确认密码" name="user[password_confirmation]" />
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" class="btn green pull-right">
          注册 <i class="m-icon-swapright m-icon-white"></i>
          </button>
        </div>
      <% end -%>
    </div>
    </div>
    <div class="col-md-6">
    <div class="reg_side">
        <p>
          已经注册？
          <%= link_to '马上登录！', login_path, title: '马上登录！', :class => 'green'%>
        </p>
        <div style="padding-top:20px;"><img src="http://img.kandao.com//images/login/zcimg.jpg"></div>
      </div>
    </div>
  </div>
</div>