$('#myModal #myModalLabel').html('查看地图');
$('#myModal .modal-body').html("<%= j render('map') %>");
$('#myModal .modal-footer').remove();
$('#myModal').modal();


// 百度地图API功能
var map_view = new BMap.Map("allmap");
// var view_point = new BMap.Point("<%= @event.lng %>", "<%= @event.lat %>");
var view_point = new BMap.Point(116.404, 39.915);
map_view.centerAndZoom(view_point, 15);
var view_marker = new BMap.Marker(view_point);// 创建标注
map_view.addOverlay(view_marker);             // 将标注添加到地图中
map_view.enableDragging();           // 不可拖拽
