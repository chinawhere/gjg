$('#myModal #myModalLabel').html('查看地图');
$('#myModal .modal-body').html("<%= j render('map') %>");
$('#myModal .modal-footer').remove();
$('#myModal').modal();

var center_view = new qq.maps.LatLng(<%= @event.lat %>,<%= @event.lng %>);
var map_view = new qq.maps.Map(document.getElementById('allmap'),{
  center: center_view,
  zoom: 13,
  zoomControl: true
});
var marker_view = new qq.maps.Marker({
  position: center_view,
  map: map_view
});