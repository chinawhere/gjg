<% @events.each do |event| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to event.name, event_path(event) %></h3>
      <p class="pull-right" style="margin-top:-20px">
        <%= link_to '活动图片', photos_event_path(event), class: 'fa fa-photo'%>
        <% if event.user == @current_user%>
          <%= link_to '编辑', edit_event_path(event), class: 'fa fa-pencil'%>
          <%= link_to '上传图片', uploader_event_path(event), class: 'fa fa-upload'%>
        <% end -%>
      </p>
    </div>

    <ul class="list-group">
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-2"><%= image_tag event.logo_url(:medium), :class => 'img-thumbnail', size:"118x118" %></div>
          <div class="col-md-6">
            <p><%= link_to event.name, event_path(event)%></p>
            <p>时间：<%= "#{event.start_at.strftime('%m月%d日 %H:%M')}--#{event.end_at.strftime('%m月%d日 %H:%M')}" %></p>
            <p>地点：<%= event.address %></p>
            <p>类型：<%= Event::EVENT_CATEGORY[event.category_id] %></p>
          </div>
        </div>
        <div class="row" style="margin-top: 15px; margin-left:0px ">
          <h4 class="form-section">活动图片</h4>
          <% event.photo_ids.each do |photo_id| %>
            <div class="col-md-2" style="padding:5px">
              <% photo = @photos.select{|p| p.id == photo_id.to_i}.first%>
              <%= image_tag photo.avatar_url(:medium), :class => 'img-thumbnail', size:"110x110"%>
            </div>
          <% end -%>
        </div>
      </li>
    </ul>
  </div>
<% end -%>
<%= will_paginate @events, :previous_label=> '« 上一页', :next_label => '下一页 »'%>