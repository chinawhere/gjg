<%= content_for :header do %>
  <%= javascript_include_tag 'ui/ui_comment' %>
  <%= javascript_include_tag 'colorbox/jquery.colorbox-min' %>
  <%= stylesheet_link_tag    'colorbox/colorbox' %>
<% end -%>
<style type="text/css">
  .commentLoading{
    text-align: center;
  }
</style>
<script>
  $(document).ready(function(){
    $("img:not(.header)").addClass("img-responsive img-thumbnail").attr("style","");
  })
</script>
<p class="pull-right" style="margin-top:-30px">
  <% if @event.user == @current_user %>
    <%= link_to '编辑', edit_event_path(@event), class: 'fa fa-pencil'%>
    <%= link_to '上传图片', uploader_event_path(@event), class: 'fa fa-upload'%>
  <%end%>
  <!--
  <%= link_to '活动图片', photos_event_path(@event), class: 'fa fa-photo'%>
  -->
</p>
<div class="row" style="margin-top: 15px;">
  <div class="col-md-4">
    <%= image_tag(asset_path(@event.logo_url(:lager)), style:"width:342px; height: 150px;", class:"img-thumbnail") %>
  </div>
  <div class="col-md-6 col-md-offset-1" style="line-height: 30px;">
    <h3><%= @event.name%></h3>
    <p>地点：<%= @event.address %></p>
    <p>时间：<%= "#{@event.start_at.strftime('%m月%d日 %H:%M')}--#{@event.end_at.strftime('%m月%d日 %H:%M')}" %></p>
    <p>费用：<%= @event.display_fee %> </p>
    <p>类型：<%= @event.taxon.name %></p>
    <% if @current_user and Apply.where(:user_id => @current_user, :event_id => @event.id).present? %>
    <%= link_to '退出我们', not_apply_event_event_path(@event), class: 'btn btn-success',:confirm => "您确定要退出我们吗？", style:'margin-top: 18px;'%>
    <% else %>
      <%= link_to '加入我们', apply_event_event_path(@event), class: 'btn btn-success', style:'margin-top: 18px;'%>
    <%end%>
  </div>
</div>

<h4 style="margin-top: 20px;">活动详情:</h4>
<div><%= raw(@event.content.to_s.html_safe) rescue ''%></div>

<h4 style="margin-top: 40px; margin-bottom: 20px;">活动图片:</h4>
<div class="row">
<% @event.photos.each do |photo|%>
  <div class="col-md-2">
   <%= link_to (image_tag photo.avatar_url(:medium), size:"118x118"), photos_event_path(id: @event.id, p_id: photo.id)%>
  </div>
<% end -%>
</div>

<div class="row" style="padding:10px;background-color:#f5f5f5">评论</div>
<%= render :partial => 'comments/comment_panel', :locals => { :commentable_id => @event.id, :commentable_type => 'Event', :auto_load => 'on' } %>
