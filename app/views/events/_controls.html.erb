		<% else %>
			<%= link_to '加入我们', apply_event_event_path(@event), class: 'btn btn-info', style:'margin-top: 18px;'%>
		<% end %>
	<% else %>
			<%= link_to '加入我们', apply_event_event_path(@event), class: 'btn btn-info', style:'margin-top: 18px;'%>
	<% end %>
<% end %>
