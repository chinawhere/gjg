    <div class="col-md-12">
      <%= link_to '上传图片', uploader_event_path(@event), class: 'btn btn-info'%>
      <%= link_to '编辑活动', edit_event_path(@event), class: 'btn btn-info'%>
    </div>
  </div>
<% else %><D-^>
	<% if @current_user %>
		<% if @current_user.joined?(@event) %>
