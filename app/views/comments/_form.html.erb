<%= simple_form_for @comment, remote: true do |f| %>
  <%= f.input :content, label: false, input_html:{class:'form-control', rows:6, required:'required'}%><br/>
  <%= f.input :commentable_type, as:'hidden' %>
  <%= f.input :commentable_id, as:'hidden' %>
  <%= f.submit '提交', :disable_with => '提交中', class:'btn btn-info form-control' %>
<% end %>
