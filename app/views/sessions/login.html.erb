<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-5 sign-up-form">
      <div class="content">
        <%= form_tag sessions_path, method: "post", :class => 'form-horizontal' do %>
          <div class="form-group">
            <h4 class="form-title col-sm-8 col-sm-offset-2 text-center">会员登陆</h4>
          </div>
          <% if flash[:notice] %>
            <div class="alert alert-danger alert-dismissible col-sm-offset-2" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              邮箱或密码错误
            </div>
          <% end %>
          <div class="form-group">
            <label for="email" class="col-sm-2 control-label text-left">邮箱</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="email" placeholder="请输入邮箱地址" name="email" required>
            </div>
          </div>
          <div class="form-group">
            <label for="password" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="password" placeholder="请输入密码" name="password" required>
            </div>
          </div>
          <!--
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> 记住我
                </label>
              </div>
            </div>
          </div>
          -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default btn-info btn-large btn-block">登陆</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-7">
    <div class="reg_side">
      <p>
        还没有注册？
        <%= link_to '立即注册！', register_path, title: '立即注册！', :class => 'green'%>
      </p>
      <div style="padding-top:20px;"></div>
    </div>
    </div>
  </div>
</div>
