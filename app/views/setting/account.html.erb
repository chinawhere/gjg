<div class="row" style="margin-left:10px">
  <h3 style="border-bottom: 1px solid #ccc">基本设置</h3>
  <p class="pull-right" style="margin-top:-30px">
    <%= link_to '基本设置', account_settings_path, class: 'fa fa-pencil'%>
    <%= link_to '修改密码', password_settings_path, class: 'fa fa-pencil'%>
  </p>
  <%= form_for @current_user, url: basic_settings_path, html: {:class => 'talen_two_f login-form'} do |f|%>
    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">姓名</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
        <%= f.text_field :name, 'validation-config' => "{'checking':['required'],'init':[true],'name':'姓名'}", :class => 'form-control input-medium'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">邮箱</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-envelope-o"></i>
          </span>
        <%= f.text_field :email, 'validation-config' => "{'checking':['required', 'email'],'init':[true, true],'name':'邮箱'}", :class => 'form-control input-medium'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">电话</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-phone-square"></i>
          </span>
        <%= f.text_field :mobile, 'validation-config' => "{'checking':['required', 'mobilePhone'],'init':[true, true],'name':'电话'}", :class => 'form-control input-medium'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">职位</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
        <%= f.text_field :position, :class => 'form-control input-medium'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">年龄</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
        <%= f.text_field :age, :class => 'form-control input-medium'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">qq</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-qq"></i>
          </span>
        <%= f.text_field :qq, 'validation-config' => "{'checking':['QQ'],'init':[true],'name':'qq'}", :class => 'form-control input-medium'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">性别</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
        <%= f.select :sex, options_for_select([['男','M'],['女','F']], selected: [@current_user.sex]), {}, class: 'form-control input-medium'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
        <label class="control-label pull-right">上传头像</label>
      </div>
      <div class="col-md-4 input-group">
        <span class="input-group-addon">
          <i class="fa fa-upload"></i>
        </span>
        <%= f.file_field :logo, :class => 'form-control input-medium' %>
      </div>
    </div>
    <div class="form-actions" style="text-align: center">
      <%= f.submit '保存', :class => 'btn green'%>
    </div>
        
  <% end -%>
</div>