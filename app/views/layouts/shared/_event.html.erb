  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <a href="<%= event_path(event)%>" target="_blank"><img data-src="holder.js/100%x200" alt="100%x200" src="<%= event.logo_url%>" data-holder-rendered="true" style="height: 150px; width: 100%; display: block;"></a>
      <div class="caption">
        <h4>
        <%= truncate(event.name,:length => 12)%>
        </h4>
        <p><%= "#{event.start_at.strftime('%m月%d日 %H:%M')}--#{event.end_at.strftime('%m月%d日 %H:%M')}" %></p>
        <p>地点：<%= event.address %></p>
        <p><a href="#" class="btn btn-primary" role="button">查看</a> <a href="#" class="btn btn-default" role="button">加入</a></p>
      </div>
    </div>
  </div>